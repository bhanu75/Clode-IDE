# Cloud IDE Environment Configuration

# Application Settings
APP_NAME=Cloud IDE
APP_VERSION=1.0.0
NODE_ENV=development

# Server Configuration
BACKEND_PORT=3001
FRONTEND_PORT=3000
HOST=localhost

# API URLs
API_BASE_URL=http://localhost:3001
WS_BASE_URL=ws://localhost:3001
FRONTEND_URL=http://localhost:3000

# CORS Settings
CORS_ORIGIN=http://localhost:3000
CORS_METHODS=GET,POST,PUT,DELETE,PATCH
CORS_CREDENTIALS=true

# Security
JWT_SECRET=your-super-secret-jwt-key-here
SESSION_SECRET=your-session-secret-here
BCRYPT_ROUNDS=10

# File System
WORKSPACE_PATH=/workspace
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=.js,.jsx,.ts,.tsx,.html,.css,.json,.md,.txt,.py,.java,.cpp

# Terminal Settings
TERMINAL_SHELL=/bin/bash
TERMINAL_ROWS=24
TERMINAL_COLS=80

# Development Container
DEV_CONTAINER_IMAGE=cloud-ide-dev
DEV_CONTAINER_NAME=cloud-ide-development

# Database (if needed later)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=cloud_ide
DB_USER=postgres
DB_PASSWORD=password

# Redis (for session storage, if needed)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Deployment
DEPLOY_ENV=development
DOCKER_REGISTRY=
IMAGE_TAG=latest

# External Services
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Monitoring
ENABLE_ANALYTICS=false
SENTRY_DSN=

# Feature Flags
ENABLE_COLLABORATION=true
ENABLE_GIT_INTEGRATION=true
ENABLE_TERMINAL=true
ENABLE_FILE_UPLOAD=true
ENABLE_THEMES=true